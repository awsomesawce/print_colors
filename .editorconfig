# Carl's standard editorconfig file template

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# `indent_style` should be spaces in most circumstances.
indent_style = space
# `indent_size` is somewhat a matter of preference, except for python files when it
# should usually be 4.
indent_size = 2
# `end_of_line` is dependent on which os you use to develop on most for the project.
# Most developers prefer `lf` because of its compatibility with both Windows and Linux.
end_of_line = crlf
# `charset` should always be `utf-8`.
charset = utf-8
trim_trailing_whitespace = false
# insert_final_newline might be necessary in some situations. In Perl I think it's a necessity.
insert_final_newline = true

[*.json]
indent_size = 2
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{sh,zsh,bash}]
indent_style = space
indent_size = 4
end_of_line = lf

[*.{yaml,yml}]
indent_size = 2

[*.{py}]
# indent size and style should always stay at these values for python files.
indent_size = 4
indent_style = space

# NOTE: `dotnet` has a few _dotnet-only_ keys for editorconfig.  Use the cli to generate one.

